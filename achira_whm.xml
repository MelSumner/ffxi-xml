	<rules>
		<!--Gear Rules-->
		<if status="dead">
			<cancelspell />
			<return />
		</if>
		<if status="engaged">
			<equip when="aftercast" set="%Status" />
		</if>
		<if spell="Teleport*|Warp">
			<return />
		</if>
		<!--Magic Rules-->
		<if type="*Magic">
			<if buffactive="petrification|stun|sleep|terror|mute">
				<cancelspell />
				<return />
			</if>
			<elseif BuffActive="Silence">
				<cancelspell />
				<command>input /item "Echo Drops" &lt;me&gt;</command>
			</elseif>
			<!--Skills-->
			<if skill="EnfeeblingMagic">
				<if notbuffactive="Visitant|Voidwatch">
					<equip set="%Type" />
				</if>
				<else>
					<equip set="%Type-%Skill" />
				</else>
			</if>
			<elseif skill="HealingMagic">
				<if Spell="*na">
					<equip set="%Skill" />
				</if>
				<elseif spell="Cure*|Cura*">
					<if casttimegt="2">
						<equip when="precast" set="fastcast-Cure" />
						<equip when="midcast" set="%Spell" />
					</if>
					<else>	
						<equip set="%Spell" />
					</else>
				</elseif>
				<elseif Spell="*raise*">
					<equip set="fastcast" />
				</elseif>
				<else>
					<equip set="%Type" />
				</else>
			</elseif>
			<!--Enhancing Magic-->
			<elseif skill="EnhancingMagic">
				<if Spell="Stoneskin">
					<equip set="fastcast-stoneskin" />
					<equip when="midcast" set="stoneskin" />
				</if>
				<elseif spell="Escape|Warp*|Recall*">
					<return />
				</elseif>
				<elseif spell="Refresh*">
					<equip set="Fastcast-EnhancingMagic" />
				</elseif>
				<elseif spell="Regen*">
					<equip set="Fastcast-EnhancingMagic" />
					<equip when="midcast" set="%Spell" />
				</elseif>
				<else>
					<if type="WhiteMagic">
						<if casttimegt="3">
							<equip set="fastcast-enhancingmagic" />
							<equip when="midcast" set="%Type-%Skill" />
						</if>
						<else>
							<castdelay delay="0.1" />  
							<equip set="%Type-%Skill" />
						</else>
					</if>
					<elseif type="BlackMagic">
						<if casttimegt="3">
							<equip set="fastcast" />
							<equip when="midcast" set="%Type-%Skill" />
						</if>
						<else>
							<equip set="%Type-%Skill" />
						</else>
					</elseif>	
				</else>
			</elseif>
			<!--elemental Magic-->
			<elseif skill="ElementalMagic">
				<if spell="Rasp|Burn|Drown|Choke|Frost|Shock">
					<equip set="%Type" />
				</if>
				<else>
					<if casttimegt="3">
						<equip set="fastcast" />
						<equip when="midcast" Set="DMG-%Skill" />
					</if>
					<else>
						<castdelay delay="0.1" />
						<equip set="DMG-%Skill" />
					</else>
				</else>
			</elseif>
			<!--Dark Magic-->
			<elseif skill="DarkMagic">
				<if casttimegt="5">
					<equip set="fastcast" />
					<equip when="midcast" Set="%Skill" />
				</if>
				<else>
					<equip set="%Skill" />
				</else>
			</elseif>
		</if>

		<!--End Rules - Process Autosets-->
		<if TimeGT="05.59" TimeLT="18.00">
        	<equip when="Resting|aftercast">
